/* pages/nav/nav.wxss */
.content{
  position: fixed;
  padding-top: 40rpx;
  width: 100%;
  height: 100%;
}
.item{
  border-radius: 15rpx;
  margin-bottom: 40rpx;
  margin-left: 5%;
  width: 90%;
  height: 230rpx;
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
}
/* 渐变颜色 */
.color1{
  background: linear-gradient(-45deg,#ffac68,#ff599e); 
  background: -webkit-linear-gradient(-45deg,#ffac68,#ff599e);  
}
.color2{
  background: linear-gradient(-45deg,#52e9ff,#5392ff); 
  background: -webkit-linear-gradient(-45deg,#52e9ff,#5392ff);  
}
.color3{
  background: linear-gradient(-45deg,#ffd94f,#ff8d42); 
  background: -webkit-linear-gradient(-45deg,#ffd94f,#ff8d42);  
}
.color4{
  background: linear-gradient(-45deg,#ff68f8,#5983ff); 
  background: -webkit-linear-gradient(-45deg,#ff68f8,#5983ff);  
}

.item_title{
  font-weight: 600;
  color: #fff;
  font-size: 30rpx;
}
.item_title2{
  color: #fff;
  font-size: 20rpx;
}
.item_dis{
  margin-top: 20rpx;
  font-size: 20rpx;
  color: #fff;
  width: 65%;
}
.cardContent{
  position: relative;
  padding: 36rpx;
}
.tag_img{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 60rpx;
  bottom:30rpx;
}
.tag_img2{
  position: absolute;
  width: 50rpx;
  height: 60rpx;
  right: 60rpx;
  bottom:30rpx;
}